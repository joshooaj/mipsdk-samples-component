<Window x:Class="ImageViewerClient.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageViewerClient"
        mc:Ignorable="d"
        Title="Password Form" Height="147" Width="388" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Password is required to open this database." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="textBoxPassword" HorizontalAlignment="Left" Margin="108,41,0,0" VerticalAlignment="Top" Width="142" Height="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="41,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,-0.324"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="OkButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,95,10" VerticalAlignment="Bottom" Width="75" IsCancel="True"/>

    </Grid>
</Window>
